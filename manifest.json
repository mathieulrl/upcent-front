{
  "$schema": "https://live-app-catalog.ledger.com/schema.json",
  "id": "upcent-live-app",
  "name": "Upcent Live App",
  "url": "http://localhost:3000/",
  "homepageUrl": "http://localhost:3000/",
  "platform": ["ios", "android", "desktop"],
  "apiVersion": "^2.0.0",
  "manifestVersion": "2",
  "branch": "stable",
  "categories": ["finance", "defi"],
  "currencies": "*",
  "content": {
    "shortDescription": {
      "en": "A simple crypto savings app using Morpho and Aave."
    },
    "description": {
      "en": "Deposit crypto assets on the best DeFi platform (Morpho or Aave) using your Ledger device."
    }
  },
  "permissions": [
    "account.list",
    "account.receive",
    "account.request",
    "currency.list",
    "message.sign",
    "transaction.sign",
    "transaction.signAndBroadcast",
    "wallet.capabilities",
    "wallet.info",
    "wallet.userId"
  ],
  "domains": ["http://", "https://"],
  "visibility": "complete"
}
